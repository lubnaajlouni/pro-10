<body>

    <!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="./index.html"><i class="fa fa-home"></i> Home</a>
                        <span>Shopping cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Shop Cart Section Begin -->
    <section class="shop-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shop__cart__table">

                        @if (Model.Count == 0)
                        {
                            <h3>Your cart is currently empty.</h3>
                        }
                        else
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cartItem in Model)
                                    {
                                        <tr id="@cartItem.CartId">
                                            <td class="cart__product__item">
                                                <a href="@Url.Action("shopdetails", "Home" , new {id=@cartItem.Itemeoffered.Item.Item_Id})">
                                                    <img src="~/Images/@cartItem.Itemeoffered.Item.Image1" alt="" style="height:100%; width:20%;">
                                                </a>
                                                <div class="cart__product__item__title">
                                                    <a href="@Url.Action("shopdetails", "Home" , new {id=@cartItem.Itemeoffered.Item.Item_Id})">
                                                        <h6>@cartItem.Itemeoffered.Item.Item_Name</h6>
                                                    </a>
                                                </div>
                                            </td>
                                            <td class="cart__price">@cartItem.Itemeoffered.Item.ItemPrice JD</td>

                                            <td>
                                                <div>
                                                    <input type="number" name="quantity" id="quantity_@cartItem.CartId" value="@cartItem.Quantity" min="1" max="@cartItem.Itemeoffered.QuantityLeft" />
                                                </div>
                                            </td>

                                            <td class="cart__total">@(cartItem.Quantity * cartItem.Itemeoffered.Item.ItemPrice)</td>
                                            <td class="cart__close">
                                                <span class="icon_close" id="close_@cartItem.CartId"></span>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn">
                        <a href="/Home/Items">Continue Shopping</a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="cart__btn update__btn">
                        <a href="/Home/Checkout"><span class="icon_loading"></span> Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
