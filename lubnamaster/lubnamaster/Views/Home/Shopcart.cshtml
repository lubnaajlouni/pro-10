    <script>
    $(document).on('change', 'input[name="quantity"]', function() {
        var cartId = $(this).attr('id').split('_')[1]; // Get the cart ID from the input field's ID
        var quantity = $(this).val(); // Get the updated quantity

        // Make an AJAX request to update the quantity in the database
        $.ajax({
            url: '@Url.Action("UpdateQuantity", "Home")', // Replace with the URL of your controller action
            type: 'POST',
            data: { cartId: cartId, quantity: quantity },
            success: function (result) {
                // Update the total in the table row with the returned result
                $('#' + cartId).find('.cart__total').text(result.total);

                // Update the cart item count in the navbar
                $('#cart-count').text(result.cartItemCount);
            },

            error: function() {
                // Handle error
            }
        });
    });
    </script>

    <script>
 $(document).on('click', '.icon_close', function() {
    var cartId = $(this).attr('id').split('_')[1]; // Get the cart ID from the close icon's ID


        // Make an AJAX request to delete the item from the database
        $.ajax({
            url: '@Url.Action("DeleteCartItem", "Home")', // Replace with the URL of your controller action
            type: 'POST',
            data: { cartId: cartId },
            success: function (result) {
                // Remove the table row for the deleted item
                $('#' + cartId).remove();

                // Update the cart item count in the navbar
                $('#cart-count').text(result.count);

                // Show success or error message
                alert(result.message);
            },
            error: function () {
                // Handle error
            }
        });

     });


    </script>

    <script>
        $(document).ready(function () {
            // Fetch cart item count from server
            $.ajax({
                url: '@Url.Action("GetCartItemCount", "Home")', // Update with the URL of your server-side action
                type: 'GET',
                success: function (data) {
                    // Update cart item count in the navbar
                    $('#cart-count').text(data.count);
                },
                error: function (xhr, textStatus, errorThrown) {
                    // Handle error if necessary
                }
            });
        });

