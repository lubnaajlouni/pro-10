            </td>
            <td>
                <img style="height:50px; width:50px" src="../Images/@Html.DisplayFor(modelItem => item.Image4)" />
            </td>
            <td>
                <img style="height:50px; width:50px" src="../Images/@Html.DisplayFor(modelItem => item.Image5)" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Item_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Item_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Item_Id })
            </td>
        </tr>
    }

</table>
